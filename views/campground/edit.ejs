<%- include('../partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-sm-0 col-md-3"></div>
        <div class="col-md-6">
            <div >
                <h1>Edit campround</h1>
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input  class="form-control" type="text" name="name" value="<%=campground.name%>"/>
                    </div>
                    <div class="form-group">
                        <input  class="form-control" type="number" min="1"  name="price" value="<%=campground.price%>"/>
                    </div>
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="image1" value="<%=campground.image[0]%>" required/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image2" value="<%=campground.image[1]%>"/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image3" value="<%=campground.image[2]%>"/>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" value="<%=campground.description%>"/>
                    </div>
                    
                    <input class="btn btn-primary btn-lg" style="width:100%;" type="submit" role="button" value="Submit"/>
                </form>
                <a  href="/campgrounds/<%=campground._id%>">View all campgrounds</a>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
